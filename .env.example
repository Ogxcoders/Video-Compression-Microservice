# API Configuration
API_KEY=your-secure-api-key-here
ALLOWED_DOMAINS=https://wp.yourdomain.com,https://wordpress.yourdomain.com
PORT=3000
LOG_LEVEL=info

# File Size Limits (in bytes)
MAX_VIDEO_FILE_SIZE=5000000000
MAX_IMAGE_FILE_SIZE=500000000

# Temporary Storage
TEMP_DIR=/tmp/compression

# Database Configuration
REDIS_URL=redis://redis:6379
DATABASE_URL=postgres://compressor:compressor123@db:5432/compression?sslmode=disable

# Queue Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=3600
QUEUE_CHECK_INTERVAL=5

# External Tools
FFMPEG_PATH=/usr/bin/ffmpeg
IMAGEMAGICK_PATH=/usr/bin/convert

# WordPress Configuration
WORDPRESS_API_URL=https://wp.yourdomain.com/wp-json/wp/v2
WORDPRESS_USERNAME=admin
WORDPRESS_APP_PASSWORD=your-wordpress-app-password

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_MAX_CONCURRENT=100
RATE_LIMIT_MAX_JOBS_PER_DAY=1000

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=60,300,900
